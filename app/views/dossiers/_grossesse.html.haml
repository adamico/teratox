.inputs#info_grs
  = f.input :assmedproc, :label => "Assistance médicale à la procréation", :collection => Dossier::ONI

  %table.grossesse
    %tr
      %th{:colspan => "3"} Grossesses antérieures :
      %td#grsant= @dossier.grsant rescue "0"
    %tr
      %th= f.label :fcs
      %td= f.text_field :fcs, :size => "1"
      %th= f.label :geu
      %td= f.text_field :geu, :size => "1"
    %tr
      %th= f.label :miu
      %td= f.text_field :miu, :size => "1"
      %th= f.label :ivg
      %td= f.text_field :ivg, :size => "1"
    %tr
      %th= f.label :img
      %td= f.text_field :img, :size => "1"
      %th= f.label :nai
      %td= f.text_field :nai, :size => "1"
  %table.grossesse{ :style => "margin-left:1em" }
    %tr
      %th= f.label :sa, "Terme(SA)"
      %td= f.text_field :sa, :size => "1"
    %tr
      %th= f.label :ddr,  "DDR"
      %td= f.text_field :ddr
    %tr
      %th= f.label :dg, "Debut de grossesse"
      %td= f.text_field :dg
    %tr
      %th= f.label :dap, "Accouchement prévu"
      %td= f.text_field :dap
    %tr
      %td &nbsp;
      %td
        = button_to_function "Calculer", nil, :id => "calc"
        = button_to_function "Effacer", nil, :id => "reset"

.clear
