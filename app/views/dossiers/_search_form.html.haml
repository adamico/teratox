= search_form_for q, :url => search_dossiers_path, :html => {:method => :post} do |f|
  %ol
    %li
      = f.label :included_eq, "Inclu?"
      = f.select :included_eq, [["Oui", 1], ["Non", 0]], :include_blank => true
    %li
      = f.label :nom_cont# "Nom patiente"
      = f.text_field :nom_cont
    %li
      = f.label :commentaire_cont# "Mot(s) dans les commentaire"
      = f.text_field :commentaire_cont
    -#FIXME: figure out why date_appel search is not working
      %li
        = f.label :date_appel_gteq, "Par année"
        = f.date_select :date_appel_gteq,
          :start_year => 1995, :end_year => Time.now.year,
          :discard_day => true, :discard_month => true, :include_blank => true
        = f.date_select :date_appel_lteq,
          :start_year => 1995, :end_year => Time.now.year,
          :discard_day => true, :discard_month => true, :include_blank => true
    %li
      = f.label :profession_
      = f.collection_select :profession_id_eq, professions, :id, :name, :include_blank => true
    %li= f.submit
  -#
    = f.input :correspondant_specialite_id_equals, :label => "Correspondant (spécialité)", :collection => specialites, :input_html => {:include_blank => true}
    = f.input :produits_id_equals, :label => "Produits", :collection => produits, :input_html => {:include_blank => true}
    = f.input :expo_type_equals, :label => "Type Exposition", :collection => %w[solvants autres], :input_html => {:include_blank => true}
    = f.input :niveau_id_equals, :label => "Niveaux", :collection => niveaux, :input_html => {:include_blank => true}
    = f.input :acctype_id_equals, :label => "Evolution", :collection => acctypes, :input_html => {:include_blank => true}
    = f.input :is_malforme, :label => "Malformation", :collection => [["Non", ""], ["Oui", 1]], :input_html => {:include_blank => true}
