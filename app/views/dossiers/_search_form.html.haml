= search_form_for q, :url => search_dossiers_path, :html => {:method => :post} do |f|
  %ol
    %li
      = f.label :included_eq, "Inclu?"
      = f.select :included_eq, [["Oui", 1], ["Non", 0]], :include_blank => true
    %li
      = f.label :nom_cont# "Nom patiente"
      = f.text_field :nom_cont
    %li
      = f.label :commentaire_cont# "Mot(s) dans les commentaire"
      = f.text_field :commentaire_cont
    %li
      = f.label :date_appel_gteq, "Par annÃ©e"
      = f.date_select :date_appel_gteq,
        :default => {:year => 1995},
        :start_year => 1995, :end_year => Time.now.year,
        :discard_day => true, :discard_month => true
      = f.date_select :date_appel_lteq,
        :start_year => 1995, :end_year => Time.now.year,
        :discard_day => true, :discard_month => true
    %li
      = f.label :profession_id_eq
      = f.collection_select :profession_id_eq, professions, :id, :name, :include_blank => true
    %li
      = f.label :produits_id_eq
      = f.collection_select :produits_id_eq, produits, :id, :name, :include_blank => true
    %li
      = f.label :correspondant_specialite_id_eq
      = f.collection_select :correspondant_specialite_id_eq, specialites, :id, :name, :include_blank => true
    %li
      = f.label :expo_type_eq
      = f.select :expo_type_eq, [%w(solvants solvants), %w(autres autres)], :include_blank => true
    %li
      = f.label :niveau_id_eq
      = f.collection_select :niveau_id_eq, niveaux, :id, :name, :include_blank => true
    %li
      = f.label :acctype_id_eq
      = f.collection_select :acctype_id_eq, acctypes, :id, :name, :include_blank => true
    %li
      = f.label :bebes_malforme_eq
      = f.select :bebes_malforme_eq, [["Non", 0], ["Oui", 1]], :include_blank => true
    %li= f.submit
