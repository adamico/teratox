<% title ( "Liste des dossiers (" + h( @dossiers.count.to_s ) + ")" ) %>

<% form_for @search do |f| %>
  <%= f.label :nom_like, "Nom : " %><%= f.text_field :nom_like %><br />
   <%= f.submit "Rechercher", :name => nil %>
 <% end %>

<table>
    <% @dossiers.each do |dossier| %>
      <tr class="<%= cycle("even", "odd") -%>">
        <td><%= link_to h(dossier.n_sicap), dossier %></td>
        <td><%= dossier.short_name %></td>
        <td><%= link_to 'Modifier', edit_dossier_path(dossier) %></td>
        <td><%= link_to 'Detruire', dossier, :confirm => 'Etes-vous sur ?', :method => :delete %></td>
      </tr>
    <% end %>
</table>

<br />
<%= link_to 'Nouveau dossier', new_dossier_path %>
