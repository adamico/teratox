%h2 Évolution
.inputs#evolution
  = f.association :acctype, :label => "Type", :as => :radio,
    :collection => Acctype.all, :label_method => :abbr
  = f.association :accmod, :label => "Modalité", :as => :radio,
    :collection => Accmod.all, :label_method => :abbr
  = f.input :path_mat, :label => "Pathologie maternelle",
    :collection => Dossier::ONI

  .clear
  .input.inline
    = f.label :dra, "Date accouchement"
    = f.text_field :dra
    = f.label :terme, "Terme (SA)"
    = f.text_field :terme, :size => 1
    = button_to_function "Calculer", nil, :id => "calc2"
  = f.input :anomalie_echo
  = f.input :rciu
  = f.input :comm_evol,
    :hint => "* Compléter le champ malformation dans la section nouveau-né si examen anatomo-pathologique interprétable",
    :input_html => { :size => "40x2"}
