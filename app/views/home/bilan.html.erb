<% title 'Bilan/statistiques' %>
<h3>Données générales</h3>
<p>
  Dossier plus récent : <%= link_to h(@last.n_sicap), dossier_path(@last) %>, du <%= @last.date_appel.to_s(:date_appel) %>
</p> 

<h3>Exposition</h3>
<table class="latex">
  <tr>
    <th>&nbsp;</th>
    <th>
      Groupe<br />Solvants<br />
      n = <%= @solvants.count %>
    </th>
    <th>
      Groupe<br />Produits divers<br />
      n = <%= @autres_nr %>
    </th>
    <th>
      Total<br />
      n = <%= @dossiers.count %>
    </th>
  </tr>
  <tr>
    <th>
      Âge moyenne <br />
      de la mère
    </th>
    <td>
      <%= @solvage_moyen %>
      (<%= @solvage_sd %>)
    </td>
    <td>
      <%= @autres_age_moyen %>
    </td>
    <td>
      <%= @age_moyen %>
      (<%= @age_sd %>)
    </td>
  </tr>
  <tr>
    <th>
     Âge < 35 ans
    </th>
    <td><%= @solvage_lt35 %></td>
    <td><%= @age_lt35 - @solvage_lt35 %></td>
    <td><%= @age_lt35 %></td>
  </tr>
  <tr>
    <th>
      P1G1
    </th>
    <td><%= @solv_p1g1 %></td>
    <td><%= @p1g1 - @solv_p1g1 %></td>
    <td><%= @p1g1 %></td>
  </tr>
  <% @niveaux.each do |n| %>
    <% unless n.id == 0 %>
      <tr>
        <th style="text-align: right;">
          <%= n.name %>
        </th>
        <td>
          <%= n.dossiers.solvants.count %>
        </td>
        <td>
          <%= n.dossiers.count - n.dossiers.solvants.count %>
        </td>
        <td>
          <%= n.dossiers.count %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table><h3>Évolution</h3>
<table class="latex">
  <tr>
    <th>&nbsp;</th>
    <th>
      Groupe<br />Solvants<br />
      n = <%= @solvants.count %>
    </th>
    <th>
      Groupe<br />Produits divers<br />
      n = <%= @autres_nr %>
    </th>
    <th>
      Total<br />
      n = <%= @dossiers.count %>
    </th>
  </tr>
  <% @evolutions.each do |e| %>
    <tr>
      <th><%= e.abbr %></th>
      <td><%= e.dossiers.solvants.count %></td>
      <td><%= e.dossiers.count - e.dossiers.solvants.count %></td>
      <td><%= e.dossiers.count %></td>
    </tr>
  <% end %>
  <th>Enfants</th>
  <td><%= Bebe.dossier_solvants.count %></td>
  <td><%= @bebes.count - Bebe.dossier_solvants.count %></td>
  <td><%= @bebes.count %></td>
</table>
<h3>Stratification Niveaux/Issues</h3>
<h4>Groupe Solvants</h4>
<table>
  <tr>
    <td>
      <table class="latex">
        <tr>
          <th>&nbsp;</th>
          <th>Naissances</th>
          <th>FCS+MIU</th>
          <th>Total</th>
        </tr>
        <% @niveaux.each do |n| %>
          <% unless n.id == 0 %>
            <tr>
                <th style="text-align: right;">
                  <%= n.name %>
                </th>
              <td>
                <%= n.dossiers.solvants.naissances.count %>
              </td>
              <td>
                <%= n.dossiers.solvants.fausses_couches.count %>
              </td>
              <td>
                <%= n.dossiers.solvants.count %>
              </td>
            </tr>
          <% end %>
        <% end %>
        <tr>
          <th style="text-align: right;">Total</th>
          <td><%= @solvants.naissances.count %></td>
          <td><%= @solvants.fausses_couches.count %></td>
          <td><%= @solvants.count %></td>
        </tr>
      </table>
    </td>
    <td>&nbsp;</td>
    <td>
      <table class="latex">
        <tr>
          <th>&nbsp;</th>
          <th>Normaux</th>
          <th>Malformés</th>
          <th>Total</th>
        </tr>
        <% @niveaux.each do |n| %>
          <% unless n.id == 0 %>
            <tr>
                <th style="text-align: right;">
                  <%= n.name %>
                </th>
              <td>
                <%= Bebe.normaux.dossier_niveau_id_is(n.id).dossier_solvants.count %>
              </td>
              <td>
                <%= Bebe.malformes.dossier_niveau_id_is(n.id).dossier_solvants.count %>
              </td>
              <td>
                <%= Bebe.dossier_niveau_id_is(n.id).dossier_solvants.count %>
              </td>
            </tr>
          <% end %>
        <% end %>
        <tr>
          <th style="text-align: right;">Total</th>
          <td><%= Bebe.normaux.dossier_solvants.count %></td>
          <td><%= Bebe.malformes.dossier_solvants.count %></td>
          <td><%= Bebe.dossier_solvants.count %></td>
        </tr>
      </table>
    </td>
  </tr>
</table>
