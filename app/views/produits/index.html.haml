- title "Liste des produits"

- content_for :main do
  %table
    - @produits.each do |produit|
      %tr
        %td= link_to h(produit.name), produit
        %td= link_to 'Edit', edit_produit_path(produit)
        %td= link_to 'Destroy', produit, :confirm => 'Are you sure?', :method => :delete

  %p= will_paginate @produits, :previous_label => "<--", :next_label => "-->"
