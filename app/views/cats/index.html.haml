- title "Cats"

- content_for :main do
  %table
    %tr
      %th Name
    - for cat in @cats
      %tr
        %td= h cat.name
        %td= link_to 'Show', cat
        %td= link_to 'Edit', edit_cat_path(cat)
        %td= link_to 'Destroy', cat, :confirm => 'Are you sure?', :method => :delete

  %p= link_to "New Cat", new_cat_path
