!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en" }
  %head
    %title= h(yield(:title) || "Untitled")
    = stylesheet_link_tag 'application', 'formtastic', 'formtastic_changes', :cache => 'base'
    = javascript_include_tag :defaults, :cache => true
    = calendar_date_select_includes "blue", :locale => I18n.locale
    = yield(:head)
    - javascript_tag do
      = yield(:jstemplates)
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      #topbar
        %a{ :name => "top" }
        - if show_title?
          %h1= h yield(:title)
      #navbar
        = yield(:navbar)
      #main
        = yield(:main) or yield
      #footer
